<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout android:id="@+id/layoutmain"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_pick_img"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="보내기"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/effect_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:maxWidth="70dp"
        android:maxHeight="70dp"

        android:layout_below="@+id/layoutmain"
        android:layout_above="@+id/horizontalScrollView"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/effect_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked"/>

            <ImageView
                android:id="@+id/effect_boost_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"

                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_boost_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_boost_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />
            <ImageView
                android:id="@+id/effect_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />

            <ImageView
                android:id="@+id/effect_color_depth_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />

            <ImageView
                android:id="@+id/effect_color_depth_64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />

            <ImageView
                android:id="@+id/effect_contrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:onClick="buttonClicked" />

        </LinearLayout>


    </HorizontalScrollView>
</RelativeLayout>