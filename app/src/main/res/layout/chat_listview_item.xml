<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:gravity="center">

        <LinearLayout
            android:id="@+id/hor_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/default_profile_pic"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hour_and_minute2"
                    android:textColor="#000000"
                    android:text="12:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toEndOf="@id/hour_and_minute2"
                    android:id="@+id/myTalkLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginStart="8dp"
                        android:id="@+id/nickName"
                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text ="nickname" />
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_gravity="end"
                        android:text ="근데 아까보단 좀 덜 꼬이는 것 같기도 하고"
                        android:background="@drawable/outbox2"/>
                    <ImageView
                        android:id="@+id/sendedImage"
                        android:visibility="visible"
                        android:src="@drawable/default_profile_pic"
                        android:layout_gravity="end"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/hour_and_minute"
                android:textColor="#000000"
                android:text="12:00"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/hor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_below="@id/hor_layout2">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/imageViewleft"
            android:background="#888888"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text ="text"        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/imageViewright"
            android:background="#888888"
            android:layout_weight="1"
            android:layout_margin="10dp" />
    </LinearLayout>
</RelativeLayout>